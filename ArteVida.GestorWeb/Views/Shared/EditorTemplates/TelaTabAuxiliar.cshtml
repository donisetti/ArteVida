@model ArteVida.GestorWeb.ViewModels.TabelaAuxiliarViewModel

@Html.HiddenFor(model => model.Id)

<div id="campos" style="width:700px;height:150px;padding:5px; ">

    <div class="row">

        <div class="col-md-2">
            @Html.LabelFor(model => model.Nome)
        </div>

        <div class="col-md-7">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)

        </div>
    </div>



 
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.Tipo)

        </div>



        <div class="col-md-8">
            @(Html.Kendo().ComboBox()
                .Name("Tipo")
                .Enable(false)
                .Placeholder("Tipo...")
                .BindTo(new List<string>() {
                  "Ramo de Atividades",
                  "Nacionalidades",
                  "Cargos",
                 "Acomodações" ,
                 "Tipo de Plano de Saúde",
                    "Tipo de Associação"

                })
                .SelectedIndex(1)
                .Suggest(true)
                .HtmlAttributes(new { style = "width:200px" }))
            @Html.ValidationMessageFor(model => model.Tipo)
        </div>


    </div>


</div>

