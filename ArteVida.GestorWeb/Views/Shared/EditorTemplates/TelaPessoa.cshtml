            @Html.LabelFor(model => model.NumeroFicha)
        </div>

        <div class="col-sm-1">
            @Html.EditorFor(model => model.NumeroFicha)
            @Html.ValidationMessageFor(model => model.NumeroFicha)

        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-1">
            @Html.LabelFor(model => model.Telefone)

        </div>

        <div class="col-sm-3">
            @Html.EditorFor(model => model.Telefone)
            @Html.ValidationMessageFor(model => model.Telefone)

        </div>

        <div class="col-sm-2">
            @Html.LabelFor(model => model.DataCadastro)

        </div>

        <div class="col-sm-3">
            @Html.EditorFor(model => model.DataCadastro)
